@model IEnumerable<TechDelivery.Models.Transport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Transport Table</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Type")
        </th>
        <th>
            @Html.Label("Expluatation cost")
        </th>
        <th>
            @Html.Label("Leasing company")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TransportType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransportExpluatationCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LeasingCompany.LeasingCompanyName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TransportId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TransportId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TransportId })
        </td>
    </tr>
}

</table>
