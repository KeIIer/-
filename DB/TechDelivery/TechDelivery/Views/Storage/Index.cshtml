@model IEnumerable<TechDelivery.Models.Storage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Storage Table</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Storage")
        </th>
        <th>
            @Html.Label("Storage items")
        </th>
        <th>
            @Html.Label("Type")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StorageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StorageItems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StorageTypeTable.StorageTypes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StorageId }) |
            @Html.ActionLink("Details", "Details", new { id=item.StorageId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StorageId })
        </td>
    </tr>
}

</table>
